<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.finalproject.UsersDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fUserDetailTxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/fUserDetailTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />

    <Button
        android:id="@+id/fUsersDetailReqButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send Friend Request"/>

    <TextView
        android:id="@+id/fUserDetailTxtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:visibility="invisible"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/fUsersDetailReqCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:layout_weight="1"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/fUsersDetailReqAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_weight="1"
        android:visibility="invisible"/>
</LinearLayout>

</LinearLayout>
